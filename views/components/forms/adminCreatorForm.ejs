<form method="post" action="../admin/creator">
    <label for="courseTitle">Nadpis kurzu</label>
    <input id="courseTitle" class="courseInputs" name="courseTitle" placeholder="Zde je nadpis kurzu.">

    <br>

    <label for="courseThumbnail">URL titulní fotky</label>
    <input class="courseInputs" id="courseThumbnail" name="courseThumbnail" placeholder="Zde je URL náhlední fotky kurzu.">

    <br>

    <label for="courseCategory">Název kategorie</label>
    <input class="courseInputs" id="courseCategory" name="courseCategory" placeholder="Zde je název kategorie.">

    <br>

    <label for="courseTextForm">Text celého kurzu:</label>
    <textarea id="courseBody" name="courseBody" rows="4" placeholder="Zde bude zadáván veškerý text pro kurz, v html tagu."></textarea >

    <br>


    <button type="submit">ODEŠLI</button>
</form>